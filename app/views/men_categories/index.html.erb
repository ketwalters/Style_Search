<h2>Choose a category or color</h2>

<div class="category"> 
<% @categories.each do |category| %>
  <div class="formal">
  <% if category.type == "M_Formal" %>
    
      <h2><%= link_to "#{category.type}", mformalitems_path %></h2>

      <%= link_to mred_path do %>
      <div class="redoval"></div>
      <% end %>
      
      <%= link_to mgreen_path do %>
      <div class="greenoval"></div>
      <% end %>
    
      <%= link_to mpurple_path do %>
      <div class="purpleoval"></div>
      <% end %>
      
  </div>
      
  <% elsif %>
  
  <div class="work">
    
    <% if category.type == "M_Work" %>
    
      <h2><%= link_to "#{category.type}", mworkitems_path %></h2>

      <%= link_to mred_work_path do %>
      <div class="redoval"></div>
      <% end %>

      <%= link_to mgreen_work_path do %>
      <div class="greenoval"></div>
      <% end %>

      <%= link_to mpurple_work_path do %>
      <div class="purpleoval"></div>
      <% end %>

    <% end %>
  
  </div>

  
  <div class="casual">
    
    <% if category.type == "M_Casual" %>
        
        <h2><%= link_to "#{category.type}", mcasualitems_path %></h2>

        <%= link_to mred_casual_path do %>
        <div class="redoval"></div>
        <% end %>
      
        <%= link_to mgreen_casual_path do %>
        <div class="greenoval"></div>
        <% end %>
      
        <%= link_to mpurple_casual_path do %>
        <div class="purpleoval"></div>
        <% end %>

    <% end %>
  
  </div>
      
<% end %>


<% end %>
</div>
